<%- include('../includes/header'); %>

  <div class="container">
    <h2>
      Tambah Pesanan
    </h2>
    <form action="/pesanan/store" method="POST">
      <div class="mb-3">
        <label for="id_menu" class="form-label">ID Menu</label>
        <input type="text" name="id_menu" class="form-control" id="id_menu" value="">
     </div>
      <div class="mb-3">
        <label for="id_kasir" class="form-label">ID Kasir</label>
        <input type="text" name="id_kasir" class="form-control" id="id_kasir" value="">
     </div>
      <div class="mb-3">
        <label for="waktu" class="form-label">Waktu Pemesanan</label>
        <input type="text" name="waktu" class="form-control" id="waktu" value="">
     </div>
      <div class="mb-3">
        <label for="harga" class="form-label">Harga</label>
        <textarea type="text" name="harga" class="form-control" id="harga"></textarea>
     </div>
      <div class="mb-3">
        <label for="nomor_meja" class="form-label">Nomor Meja</label>
        <textarea type="text" name="nomor_meja" class="form-control" id="nomor_meja"></textarea>
     </div>
      <div class="mb-3">
        <label for="qty" class="form-label">Qty</label>
        <textarea type="text" name="qty" class="form-control" id="qty"></textarea>
     </div>
      <div class="mb-3">
        <label for="inputStatus">Status</label>
        
     </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <%- include('../includes/footer'); %>